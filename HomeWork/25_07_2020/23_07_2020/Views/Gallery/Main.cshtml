@model Image[]
@{
    ViewBag.Title = "Gallery";
}
<div class="container">
    <div class="row">
        @for (int i = 0; i < Model.Length; i++)
        {
            <div class="col-md-4">
                <div class="card" style="width: 100%;">
                    <a href="~/@Model[i].Path"><img class="card-img-top" src="~/@Model[i].Path" alt="Card image cap"></a>
                    <div class="card-body">
                        <h5 class="card-title">@Model[i].Name</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

